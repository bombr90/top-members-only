<!DOCTYPE html>
<html>
  <head>
    <%- include('./partials/head'); %>
    <script defer type="text/javascript" src="/javascripts/signup.js"></script>
  </head>
  <body class="container">
    <header>
      <%- include('./partials/header'); -%>
    </header>
    <main>
      <h1><%= title %></h1>
      <form method="POST" action="">
        <span>
          <label for="firstName">First Name</label>
          <input 
            type="text" 
            placeholder="John" 
            name="firstName" 
            id="firstName" 
            <%= typeof member === 'undefined' ? '' : `value= ${member.firstName}` %>
            min='1'
            required='true'
          >
        </span>
        <span>
          <label for="lastName">Last Name</label>
          <input 
            type="text" 
            placeholder="Doe" 
            name="lastName" 
            id="lastName" 
            <%= (typeof(member) === 'undefined') ? '' : `value= ${member.lastName}` %>
            min='1'
            required='true'
          >
        </span>
        <span>
          <label for="email">Email</label>
          <input 
            type="email" 
            placeholder="myemail@somedomain.com" 
            name="email" 
            id="email" 
            <%= (typeof(member) === 'undefined') ? '' : `value= ${member.email}` %>
            required='true'
          >
        </span>
        <span>
          <label for="password">Password*</label>
          <input 
            type="password" 
            pattern="(?=.*[a-z])(?=.*[A-Z]).{8,}"
            name="password" 
            id="password" 
            required='true'
            title="Must contain at least one uppercase and lowercase letter, and at least 8 or more characters"
            onkeyup="confirmPassword()"
          >
        </span>
        <span>
          <label for="confirm">Confirm Password</label>
          <input 
            type="password" 
            pattern="(?=.*[a-z])(?=.*[A-Z]).{8,}"
            name="confirm" 
            id="confirm" 
            required='true'
            onkeyup="confirmPassword()"
          >
        </span>
        <span style="font-size: smaller;"><em>*Password must contain at least 8 characters, 1 upper case and 1 lower case character</em></span>
        <button type="submit">Submit</button>
      </form>
      <% if (typeof(errors) !== 'undefined') { %>
        <ul>
          <% errors.forEach(error => { %>
            <li><%= error.msg %></li>
          <% }) %>
        </ul>
      <% } %>
    </main>
    <footer>
      <%- include('./partials/footer'); -%>
    </footer>
  </body>
</html>